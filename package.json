{
  "name": "Pandora",
  "version": "2.5.2",
  "main": "index.js",
  "license": "ISC",
  "keywords": [
    "node",
    "nodejs",
    "docker",
    "recording",
    "discord",
    "discordjs",
    "typescript",
    "docker-compose",
    "bot"
  ],
  "scripts": {
    "pretest": "jest --clearCache",
    "test": "jest --config jest.config.json",
    "prebuild": "npx shx rm -rf build/*",
    "build": "tsc && npx shx cp package.json dist/package.json && npx shx cp -r src/assets dist/",
    "postbuild": "npx shx cp -r src/assets dist/",
    "gen:doc": "typedoc --entryPointStrategy expand ./src",
    "start:dapr": "dapr run --log-level debug --app-id pandora --dapr-http-max-request-size 300 --app-port 50053 --dapr-http-port 3503 --components-path ./.dapr/resources",
    "start:dev": "npm run build && node -r dotenv-safe/config dist/main.js"
  },
  "dependencies": {
    "@dapr/dapr": "^2.5.0",
    "@discordjs/opus": "^0.9.0",
    "@elastic/ecs-winston-format": "^1.5.3",
    "bufferutil": "^4.0.8",
    "cyclic-32": "^1.2.0",
    "discord-api-types": "^0.37.110",
    "eris": "^0.17.2",
    "inversify": "^6.1.6",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "winston": "^3.17.0",
    "zlib-sync": "^0.1.9"
  },
  "devDependencies": {
    "@fluffy-spoon/substitute": "^1.208.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.17.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "dotenv-safe": "^8.2.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.27.3",
    "typescript": "5.7.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:prettier/recommended"
    ]
  }
}
