{
  "name": "Pandora",
  "version": "2.4.0",
  "main": "index.js",
  "license": "ISC",
  "keywords": [
    "node",
    "nodejs",
    "docker",
    "recording",
    "discord",
    "discordjs",
    "typescript",
    "docker-compose",
    "bot"
  ],
  "scripts": {
    "pretest": "jest --clearCache",
    "test": "jest --config jest.config.json",
    "prebuild": "npx shx rm -rf build/*",
    "build": "tsc && npx shx cp package.json dist/package.json && npx shx cp -r src/assets dist/",
    "postbuild": "npx shx cp -r src/assets dist/",
    "gen:doc": "typedoc --entryPointStrategy expand ./src",
    "start:dapr": "dapr run --log-level debug --app-id pandora --dapr-http-max-request-size 300 --app-port 50053 --dapr-http-port 3503 --components-path ./dapr/components",
    "start:dev": "npm run build && node -r dotenv-safe/config dist/main.js "
  },
  "dependencies": {
    "@dapr/dapr": "^2.5.0",
    "@discordjs/opus": "^0.9.0",
    "@elastic/ecs-winston-format": "^1.3.1",
    "bufferutil": "^4.0.7",
    "cyclic-32": "^1.2.0",
    "discord-api-types": "^0.33.5",
    "eris": "^0.17.2",
    "inversify": "^6.0.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "winston": "^3.8.2",
    "zlib-sync": "^0.1.8"
  },
  "devDependencies": {
    "@fluffy-spoon/substitute": "^1.208.0",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "dotenv-safe": "^8.2.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "prettier": "^2.8.7",
    "ts-jest": "^28.0.4",
    "typedoc": "^0.23.28",
    "typescript": "4.7.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:prettier/recommended"
    ]
  }
}
